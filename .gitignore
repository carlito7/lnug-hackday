{

    // Enforcing options
    // http://www.jshint.com/docs/options/#enforcing-options

    "bitwise": true,
    "eqeqeq": true,
    "forin": true,
    "latedef": true,
    "noarg": true,
    "nonbsp": true,
    "nonew": true,
    "undef": true,
    "unused": true,

    // - - - - - - - - - - - - - - - - - - - - - - - - - - -

    // Relaxing options
    // http://www.jshint.com/docs/options/#relaxing-options

    "esnext": true,

    // - - - - - - - - - - - - - - - - - - - - - - - - - - -

    // Environments
    // http://www.jshint.com/docs/options/#environments

    "browser": true,
    "jquery": true,
    "node": true,

    "globals": {
        "describe": false,
        "it": false,
        "xdescribe": false,
        "xit": false,
        "before": false,
        "beforeEach": false,
        "after": false,
        "afterEach": false
    }

}
